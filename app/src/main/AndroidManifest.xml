<manifest package="com.devadvance.rootcloakprime"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="82" />
        <meta-data
            android:name="xposeddescription"
            android:value="Hides root from chosen apps." />

        <activity
            android:name="com.devadvance.rootcloakprime.SettingsActivity"
            android:label="@string/title_activity_settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.devadvance.rootcloakprime.CustomizeApps"
            android:label="@string/title_activity_customize_apps"
            android:parentActivityName="com.devadvance.rootcloakprime.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.devadvance.rootcloakprime.SettingsActivity" />
        </activity>

        <activity
            android:name="com.devadvance.rootcloakprime.CustomizeKeywords"
            android:label="@string/title_activity_customize_keywords"
            android:parentActivityName="com.devadvance.rootcloakprime.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.devadvance.rootcloakprime.SettingsActivity" />
        </activity>

        <activity
            android:name="com.devadvance.rootcloakprime.CustomizeCommands"
            android:label="@string/title_activity_customize_commands"
            android:parentActivityName="com.devadvance.rootcloakprime.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.devadvance.rootcloakprime.SettingsActivity" />
        </activity>

    </application>

</manifest>
